<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Network">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Network"
            android:textColor="#303030"
            android:textColorHint="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/networkgrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/mainNet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Ethereum Main Network"
                android:textColor="#606060"
                android:textSize="18sp"
                android:textStyle="bold"
                android:buttonTint="@color/green"/>

            <RadioButton
                android:id="@+id/ropsten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Ropsten Test Network"
                android:textColor="#606060"
                android:textSize="18sp"
                android:textStyle="bold"
                android:buttonTint="@color/pink"/>

            <RadioButton
                android:id="@+id/kovan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Kovan Test Network"
                android:textColor="#606060"
                android:textSize="18sp"
                android:textStyle="bold"
                android:buttonTint="@color/purple"/>

            <RadioButton
                android:id="@+id/rinkeby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Rinkeby Test Network"
                android:textColor="#606060"
                android:textSize="18sp"
                android:textStyle="bold"
                android:buttonTint="@color/yellow"/>

        </RadioGroup>

        <Button
            android:id="@+id/setnetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Set" />

    </LinearLayout>

</FrameLayout>