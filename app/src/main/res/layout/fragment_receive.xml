<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="350dp"
    tools:context=".ReceiveFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/qrimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ethereum_wallet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.011" />

        <TextView
            android:id="@+id/adrstxt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/txtadrs_bg"
            android:ellipsize="middle"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingTop="2dp"
            android:paddingEnd="5dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qrimg" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shrbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Share"
            android:textColor="#176087"
            app:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/adrstxt"
            app:layout_constraintStart_toStartOf="@+id/adrstxt"
            app:layout_constraintTop_toBottomOf="@+id/adrstxt"
            app:strokeColor="#176087"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp"
            app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.LargeComponent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>